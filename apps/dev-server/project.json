{
  "name": "dev-server",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/dev-server/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "defaultConfiguration": "production",
      "options": {
        "main": "apps/dev-server/src/main.ts",
        "outputPath": "dist/apps/dev-server",
        "additionalEntryPoints": ["apps/dev-server/src/components.ts"],
        "tsConfig": "apps/dev-server/tsconfig.app.json",
        "assets": [
          {
            "input": "apps/dev-server/src/assets",
            "glob": "*.html",
            "output": "/assets"
          },
          {
            "input": "apps/dev-server/src/assets",
            "glob": "examples/*.md",
            "output": "/"
          },
          {
            "input": "apps/dev-server/src/assets",
            "glob": "scripts/*",
            "output": "/assets"
          }
        ],
        "platform": "node"
      },
      "configurations": {
        "development": {
          "minify": false
        },
        "production": {
          "minify": true
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "dev-server:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "dev-server:build:development"
        },
        "production": {
          "buildTarget": "dev-server:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/dev-server/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/dev-server/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
