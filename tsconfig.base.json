{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": false,
    "rootDir": ".",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2020",
    "lib": ["es2020", "dom"],
    "baseUrl": ".",
    "paths": {
      "@lightsim/cli": ["apps/cli/src/index.ts"],
      "@lightsim/compiler": ["libs/compiler/src/index.ts"],
      "@lightsim/runtime": ["libs/runtime/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
