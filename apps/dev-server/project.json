{
  "name": "dev-server",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/dev-server/src",
  "projectType": "application",
  "targets": {
    "build_node": {
      "executor": "@nx/esbuild:esbuild",
      "defaultConfiguration": "production",
      "options": {
        "main": "apps/dev-server/src/main.ts",
        "outputPath": "dist/apps/dev-server",
        "deleteOutputPath": true,
        "outputFileName": "main.js",
        "tsConfig": "apps/dev-server/tsconfig.app.json",
        "platform": "node"
      }
    },
    "build_web": {
      "executor": "@nx/esbuild:esbuild",
      "defaultConfiguration": "production",
      "options": {
        "main": "apps/dev-server/src/lib/components/all.ts",
        "outputPath": "dist/apps/dev-server/lib/components",
        "tsConfig": "apps/dev-server/tsconfig.app.json",
        "platform": "browser"
      },
      "configurations": {
        "development": {
          "minify": false
        },
        "production": {
          "minify": true
        }
      }
    },
    "build": {
      "dependsOn": [
        {
          "target": "build_node"
        },
        {
          "target": "build_web"
        }
      ],
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "sh apps/dev-server/package.sh"
          }
        ]
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "dev-server:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "dev-server:build:development"
        },
        "production": {
          "buildTarget": "dev-server:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "apps/dev-server/**/*.ts",
          "apps/cli/package.json",
          "apps/cli/project.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "apps/dev-server/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
