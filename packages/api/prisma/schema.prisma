generator client {
  provider = "prisma-client-js"
  output   = "../../node_modules/.prisma/client"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Simulation {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  sim_id    String   @unique
  metadata  String
  pages     Page[]
}

model Page {
  id        Int      @id @default(autoincrement())
  sim_id    Int
  sim       Simulation @relation(fields: [sim_id], references: [id])
  sequence  Int
  contents   String
  metadata  String
  format   String
} 